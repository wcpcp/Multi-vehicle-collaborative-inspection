<launch>
  <arg name="robot_name_0" default="qingzhou_0" />
  <arg name="robot_name_1" default="qingzhou_1" /> 

  <arg name="qingzhou_0_x" default="20.0"/>
  <arg name="qingzhou_0_y" default="20.0"/>
  <arg name="qingzhou_0_a" default="0.0"/>

  <arg name="qingzhou_1_x" default="20.0"/>
  <arg name="qingzhou_1_y" default="20.5"/>
  <arg name="qingzhou_1_a" default="0.0"/>

  <group ns="$(arg robot_name_0)/map_merge">
    <param name="init_pose_x"   value="$(arg qingzhou_0_x)"/>
    <param name="init_pose_y"   value="$(arg qingzhou_0_y)"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="$(arg qingzhou_0_a)"  />
  </group>

  <group ns="$(arg robot_name_1)/map_merge">
    <param name="init_pose_x"   value="$(arg qingzhou_1_x)"/>
    <param name="init_pose_y"   value="$(arg qingzhou_1_y)"/>
    <param name="init_pose_z"   value="0"/>
    <param name="init_pose_yaw" value="$(arg qingzhou_1_a)"  />
  </group>

  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_namespace" value="qingzhou"/>
    <param name="merged_map_topic" value="map"/>
    <param name="world_frame" value="world"/>
    <param name="known_init_poses" value="true"/>
    <param name="merging_rate" value="0.5"/>
    <param name="discovery_rate" value="0.05"/>
    <param name="estimation_rate" value="0.1"/>
    <param name="estimation_confidence" value="1.0"/>
  </node>
  <arg name="rvizconfig" default="$(find qingzhou_mapping)/rviz/mapping.rviz" />
    
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" required="true" >
        <!-- <remap from="/move_base_simple/goal" to="move_base_simple/goal"/>
        <remap from="/initialpose" to="initialpose"/> -->
    </node>
</launch>